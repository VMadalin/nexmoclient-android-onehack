<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversation"
            type="com.nexmo.client.NexmoConversation" />

        <variable
            name="viewModel"
            type="com.nexmo.onehack.features.chats.ChatsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dip"
            android:textSize="16dip"
            android:textStyle="bold"
            android:text='@{conversation.displayName.equals("") ||  conversation.displayName == null ? "EmptyName" : conversation.displayName}'
            tools:text='@{conversation.displayName.equals("") || conversation.displayName == null ? "EmptyName" : conversation.displayName}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> viewModel.getConversation()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
